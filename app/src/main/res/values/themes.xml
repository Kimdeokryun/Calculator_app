<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr format="color" name="colorDrawer"/>
    <attr format="color" name="colorDrawerText"/>


    <attr format="color" name="colorMain"/>
    <attr format="color" name="colorToolbar"/>
    <attr format="color" name="colorMainText"/>

    <attr format="color" name="colorNumButton"/>
    <attr format="color" name="colorOperationButton"/>
    <attr format="color" name="colorElseButton"/>

    <attr format="color" name="colorOperationText"/>
    <attr format="color" name="colorElseText"/>
    <attr format="color" name="colorButtonStroke"/>

    <style name="Theme.Calculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/colorWhite</item>
        <item name="colorOnPrimary">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="colorDrawer">@color/colorWhite</item>
        <item name="colorDrawerText">@color/colorBlack</item>

        <item name="colorMain">@color/colorWhite</item>
        <item name="colorToolbar">@color/colorWhite</item>
        <item name="colorMainText">@color/colorBlack</item>

        <item name="colorNumButton">@color/lightbutton</item>
        <item name="colorOperationButton">@color/funcbutton</item>
        <item name="colorElseButton">@color/elsebutton</item>

        <item name="colorOperationText">@color/colorWhite</item>
        <item name="colorElseText">@color/colorBlack</item>
        <item name="colorButtonStroke">@color/strokeBlack</item>



    </style>
</resources>
